module acc-protection-group {
    yang-version 1.1;
    namespace "urn:ccsa:yang:acc-protection-group";
    prefix acc-pg;

    
    /*
    * common types
    */
    typedef protection-type {
        type enumeration {
            enum odu-sncp-i { 
		value 0;
			}
            enum odu-sncp-s { 
                value 1;
            }
	    enum vc-sncp { 
		value 2;
	    }
	    enum och-1-plus-1 { 
		value 3;
		description "OTU port 1+1 protection"
	    }
	    enum msp-1-plus-1 {
		value 4; 
	    }
            enum lag-1-to-1 {
                value 5; 
		description "ETH layer 1:1 manual & static LAG protection"
            }
            enum no-protection {
                value 6; 
            }
        }
    }
    typedef switch-direction {
        type enumeration {
            enum uni-switch {
                value 0;
            }
            enum bi-switch {
                value 1;
            }
        }
        description
            "switch direction";
    }
    typedef sd-trigger {
        type enumeration {
            enum enabled {
                value 0;
            }
            enum disabled {
                value 1;
            }
        }
        description
            "sd-trigger";
    }
    typedef protection-direction {
        type enumeration {
            enum to-primary {
                value 0;
            }
            enum to-secondary {
                value 1;
            }
        }
    }
    typedef reversion-mode {
        type enumeration {
            enum revertive {
                value 0;
            }
            enum non-revertive {
                value 1;
            }
        }
    }
    typedef switch-reason {
        type enumeration {
            enum no-switch {
                value 0;
            }
            enum sf-switch {
                value 1;
            }
            enum sd-switch {
                value 2;
            }
            enum manual-switch {
                value 3;
            }
            enum force-switch {
                value 4;
            }
            enum cleared {
                value 5;
            }
            enum wait-for-restore {
                value 6;
                description "WTR";
            }
            enum lockout {
                value 7;
                description "lockout of protection";
            }
        }
    }


    /*
    * groupings
    */
    grouping pg {
        leaf pg-id {
            mandatory true;
            type uint16;
	    default 1;
        }
        leaf protection-type {
            mandatory true;
            type protection-type;
        }
        leaf reversion-mode {
            mandatory true;
            type reversion-mode;
	    default revertive;
        }
        leaf tcm {
            type uint16;
	    default 1;
        }
        leaf switch-direction {
            mandatory true;
            type switch-direction;
	    default uni-switch;
        }
        
        leaf switch-reason {
            type switch-reason;
            config false;
            description "switch reason, default NO SWITCH";
        }
        leaf protection-direction {
            type protection-direction;
            config false;
            description  "protection direction";
        }
        leaf hold-off {
            type uint32;
            units ms;
            default 0;
            description  "hold off time";
        }
        leaf wait-to-restore-time {
            mandatory true;
            type uint64;
            units seconds;
	    default 300;
            description "wait to restore time";
        }
        leaf sd-trigger {
            type sd-trigger;
            description "sd protection";
        }
        leaf primary-port {
            mandatory true;
            type string;
            description "primary port CTP/FTP/PTP, different ports type for different services";
        }
        leaf secondary-port {
            mandatory true;
            type string;
            description "secondary port PTP/FTP/CTP, different ports type for different services";
        }
        leaf selected-port {
            mandatory true;
            type string;
            config false;
            description "selected port PTP/FTP/CTP, different ports type for different services";
        }
    }


    /*
    * the data tree
    */
    container pgs {
        list pg {
            key 'pg-id';
            uses pg;
            description "pg";
        }
        description "pgs";
    }

   notification protection-switch-notification {
        leaf protection-switch-serial-no {
            mandatory true;
            type uint64;
        }
        container pg {
            uses pg;
        }
        description "protection switch notification";
    }

    /*
    * operations
    */
    rpc perform-protection-command {
        description
            "protection";
        input {
            leaf pg-id {
                mandatory true;
                type uint64;
            }

            leaf protection-command {
                mandatory true;
                type switch-reason;
            }

            leaf protection-direction {
                mandatory true;
                type protection-direction;
            }
        }
    }
}
